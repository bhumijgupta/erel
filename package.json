{
  "name": "erel",
  "version": "0.0.1",
  "description": "Express-route-exit-logger (EREL) is a middleware package to log info, when route execution is finished",
  "main": "lib/cjs/index.js",
  "types": "lib/cjs/index.d.ts",
  "module": "lib/esm/index.js",
  "files": [
    "/lib"
  ],
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "tldts": "^5.6.48",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.9.7"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "build": "rimraf ./lib && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json",
    "build:watch": "tsc --watch",
    "prepare": "npm run build",
    "clean": "rimraf ./lib"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bhumijgupta/erel.git"
  },
  "author": "Bhumij Gupta <bhumijgupta@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bhumijgupta/erel/issues"
  },
  "homepage": "https://github.com/bhumijgupta/erel#readme"
}
